{
  "deployment": {
    "kind": "Deployment",
    "spec": {
      "template": {
        "spec": {
          "containers": [
            {
              "name": "oauth-proxy",
              "image": "gurvin/oauth2-proxy:0.1.3",
              "env": [
                {
                  "name": "OAUTH2_PROXY_COOKIE_SECRET",
                  "value": "norstore123456"
                }
              ],
              "args": [
                "-provider=dataporten",
                "-upstream=http://localhost:8888",
                "-http-address=http://:80",
                "-skip-provider-button",
                "-request-logging=false",
                "-masgroups-url=https://daas-mas-groups.dataporten-api.no/",
                "-email-domain=*"
              ],
              "imagePullPolicy": "Always",
              "ports": [
                {
                  "containerPort": 80
                }
              ]
            },
            {
              "image": "gurvin/spark-jupyter-notebook:2.0.0",
              "env": [],
              "volumeMounts": [
                {
                  "name": "norstore-volume",
                  "mountPath": "/notebooks/projects/norstore"
                }
              ],
              "name": "jupyter-notebook",
              "resources": {
                "requests": {
                  "cpu": "512m",
                  "memory": "1G"
                }
              },
              "imagePullPolicy": "Always"
            }
          ],
          "volumes": [
            {
              "name": "norstore-volume",
              "emptyDir": {}
            }
          ]
        },
        "metadata": {
          "labels": {
            "app": "jupyter-notebook"
          }
        }
      },
      "replicas": 1
    },
    "apiVersion": "extensions/v1beta1",
    "metadata": {
      "name": "jupyter-notebook"
    }
  },
  "service": {
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {},
    "spec": {
      "selector": {},
      "ports": [
        {
          "protocol": "TCP",
          "port": 80,
          "targetPort": 80
        }
      ]
    }
  },
  "persistentvolumeclaims": [],
  "ingress": {
    "apiVersion": "extensions/v1beta1",
    "kind": "Ingress",
    "metadata": {},
    "spec": {
      "backend": {
        "serviceName": "default-webserver",
        "servicePort": 80
      },
      "rules": []
    }
  }
}
